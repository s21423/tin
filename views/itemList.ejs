<%- include('fragments/header.ejs') %>
<main class="">
        <h2>Przedmioty</h2>
    <% if (komunikat === false) {
    }else { %>
        <p style="color: green">Komunikat: <%=komunikatTresc%></p>
    <% } %>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Typ</th>
                    <th>Cena(PLN)</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            <% for (let i of items) { %>
                <tr>
                    <td><%= i.nazwa %></td>
                    <td><%= i.typ %></td>
                    <td><%= i.cena %></td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/item/details/<%= i.id %>" class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <li>
                                <a href="/item/edit/<%= i.id %>" class="list-actions-button-edit">Edytuj</a>
                            </li>
                            <li>
                                <a href="/item/delete/<%= i.id %>" onclick="return confirm('Czy chcesz usunąć ten rekord?')" class="list-actions-button-delete">Usuń</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <p><a class="button-add" href="/item/add">Dodaj przedmiot</a></p>

        
    </main>
<%- include('fragments/footer.ejs') %>
