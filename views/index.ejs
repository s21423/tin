<%- include('fragments/header.ejs') %>
<main>
    <h2>Strona główna</h2>
    <% if (komunikat === false) {
    }else { %>
        <p style="color: <%=kolorKomunikatu%>">Komunikat: <%=komunikatTresc%></p>
    <% } %>
    <% if(!loggedUser) { %>
        <div id="login">
            <h5>Logowanie</h5>
            <form method="post" action="/login" novalidate>
                <label for="loginEmail">Email:</label>
                <input type="email" id="loginEmail" name="email">

                <label for="loginPassword">Hasło:</label>
                <input type="password" id="loginPassword" name="password">

                <input type="submit" value="Zaloguj się">
                <span id="loginErrors"><%= loginError ? loginError : '' %></span>
            </form>
        </div>
    <% } else { %>
        <p>Jesteś zalogowany jako: <%= loggedUser.imie + " " + loggedUser.nazwisko %>, <a href="/logout">Wyloguj się</a>
        </p>
    <% } %>
    <h5>Schemat bazy</h5>
    <img src="/images/projekt.png" style="min-height: 400px" alt="projekt">
</main>
<%- include('fragments/footer.ejs') %>
